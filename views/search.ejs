        } else {
          try {
        document.querySelector(".sl1").style = "justify-content:  flex-start;";
            
            data.forEach((e) => {
              document.querySelector(".sl1").innerHTML += `
            <div class="post">
            <div class="postImg">
              <a href="/user/${e._id}">
                <img
                  src="${e.image.url}"
                  alt="${e.image.public_id}"
                />
                </a>
              <a href="/user/${e.owner._id}" class="owner">
                <img
