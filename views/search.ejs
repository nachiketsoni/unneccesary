        `;
      };

      const searchQuery = (type) => {
        let search = document.getElementById("search");

        var settings = {
          method: "GET",
          url: `/api/search/${type}/${search.value}`,
          success: type === "user" ? userData : successData,
          error: errorData,
        };
        $.ajax(settings);
      };

